<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_weight="@integer/cause_normal_field"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="Rol"
            android:id="@+id/cause_rol"
            android:textSize="20sp"
            android:textIsSelectable="true"
            android:background="@drawable/cell_border"
            />

        <TextView
            android:gravity="center"
            android:layout_weight="@integer/cause_normal_field"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="Rut"
            android:textSize="20sp"
            android:background="@drawable/cell_border"
            android:id="@+id/cause_rut" />

        <TextView
            android:gravity="center"
            android:layout_weight="@integer/cause_normal_field"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="Nombre"
            android:textSize="20sp"
            android:background="@drawable/cell_border"
            android:id="@+id/cause_name" />
        <TextView
            android:gravity="center"
            android:layout_weight="@integer/cause_big_field"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="Etapa"
            android:textSize="20sp"
            android:background="@drawable/cell_border"
            android:id="@+id/cause_stage" />
        <TextView
            android:gravity="center"
            android:layout_weight="@integer/cause_big_field"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="Comentario"
            android:textSize="20sp"
            android:background="@drawable/cell_border"
            android:id="@+id/cause_comment" />
        <TextView
            android:gravity="center"
            android:layout_weight="@integer/cause_micro_field"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:textSize="20sp"
            android:text="Exh"
            android:background="@drawable/cell_border"
            android:id="@+id/cause_exhorto" />
        <TextView
            android:gravity="center"
            android:layout_weight="@integer/cause_normal_field"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:textSize="20sp"
            android:text="Ultimo cambio"
            android:background="@drawable/cell_border"
            android:id="@+id/cause_last_change" />
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview_cause"/>

</LinearLayout>